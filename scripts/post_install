#! /bin/bash -e

user=`who | awk {'print $1'}`

chmod -R 775 /opt/RGCopy/
chown -R $user /opt/RGCopy/

cp /opt/RGCopy/copy_with_rgcopy /home/$user/.gnome2/nautilus-scripts
echo '(gtk_accel_path "<Actions>/ScriptsGroup/script_file:\\s\\s\\shome\\s'$user'\\s.gnome2\\snautilus-scripts\\scopy_with_rgcopy" "<Primary>v")' >> /home/$user/.gnome2/accels/nautilus

echo '(gtk_accel_path "<Actions>/DirViewActions/Paste" "")' >> /home/$user/.gnome2/accels/nautilus

chmod 777 /home/$user/.gnome2/nautilus-scripts/copy_with_rgcopy
chown $user /home/$user/.gnome2/nautilus-scripts/copy_with_rgcopy

su $user
nautilus -q